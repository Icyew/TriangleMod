	<definitions>
		<abilities>
<!-- modSigns: done -->

			<!-- Swords -->
			
			<!-- Replenishment (lvl 3): When you cast a sign, you use up an adrenaline point and your next attack is charged with that sign -->
			<ability name="Runeword 1 _Stats">
				<tags>Runeword</tags>

				<!-- IGNI: % of damage dealt additionally being dealt as fire damage -->
				<runeword1_fire_dmg type="mult" min="1" />

				<!-- QUEN: healing for % of damage dealt -->
				<runeword1_quen_heal type="mult" min="0.5" />

				<!-- YRDEN: setting custom duration as base duration seems too OP -->
				<runeword1_yrden_duration type="add" min="4.0" />
			</ability>

			<!-- Severance (lvl 2): Increases Whirl and Rend range -->
			<ability name="Runeword 2 _Stats">
				<tags>Runeword</tags>
			</ability>

			<!-- Invigoration (lvl 3): When at full health, excess Vitality regeneration turns into added damage on next hit -->
			<ability name="Runeword 4 _Stats">
				<tags>Runeword</tags>
				
				<max_bonus type="mult" max="0.5" />
			</ability>

			<!-- Preservation (lvl 1): Armorer’s table and grindstone bonuses never expire -->
			<ability name="Runeword 5 _Stats">
				<tags>Runeword</tags>
			</ability>

			<!-- Dumplings (lvl 1): Consumed food restores 100% more vitality -->
			<ability name="Runeword 6 _Stats">
				<tags>Runeword</tags>
				<runeword6_duration_bonus type="mult" min="1" />
			</ability>

			<!-- Placation (lvl 1): Once Adrenaline points reach max, they slowly decline. Vitality, stamina and toxicity regenerate faster during this time -->
			<ability name="Runeword 8 _Stats">
				<tags>Runeword</tags>
			</ability>
			<ability name="Runeword 8 Regen">
				<vitalityRegen 			type="mult"	min="0.01" 	/>
				<vitalityCombatRegen 	type="mult"	min="0.01" 	/>
				<staminaRegen 			type="mult"	min="0.25" 	/>
				<toxicityRegen 			type="add" 	min="-2" 	/>
				<focus_drain 			type="mult" min="0.08" 	/>
			</ability>

			<!-- Rejuvenation (lvl 2): Fatal blows restore 20% stamina -->
			<ability name="Runeword 10 _Stats">
				<tags>Runeword</tags>
				
				<stamina type="mult" min="0.2" />
			</ability>

			<!-- Prolongation (lvl 3): Unblocked blows increase potion duration by 0.5s -->
			<ability name="Runeword 11 _Stats">
				<tags>Runeword</tags>
				<duration type="add" min="0.5" />
			</ability>

			<!-- Elation (lvl 2): Fatal blows give 0.1 to 0.2 Adrenaline points -->
			<ability name="Runeword 12 _Stats">
				<tags>Runeword</tags>
				
				<focus type="add" min="0.1" max="0.2" />
			</ability>

			<!-- Armors -->
			
			<!-- Deflection (lvl 1): Armor deflects all arrows -->
			<ability name="Glyphword 1 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<!-- Levity (lvl 3): All equipped armor counts as Light armor -->
			<ability name="Glyphword 2 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<!-- Balance (lvl 2): All equipped armor is treated as Medium armor -->
			<ability name="Glyphword 3 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<!-- Heft (lvl 1): All equipped armor is treated as heavy -->
			<ability name="Glyphword 4 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<!-- Retribution (lvl 3): Gives 30% chance of returning some damage to the attacker -->
			<ability name="Glyphword 5 _Stats">
				<tags>Glyphword</tags>
				
				<damage_mult type="mult" min="0.67" />
				<glyphword5_chance type="add" min="0.3" />
			</ability>

			<!-- Depletion (lvl 1): Hitting enemies with Aard reduces their Stamina by 50% -->
			<ability name="Glyphword 6 _Stats">
				<tags>Glyphword</tags>

				<glyphword6_stamina_drain_perc type="add" min="0.5" />
			</ability>

			<!-- Rotation (lvl 2): Igni strikes in a 360 radius but doesn’t induce Burning -->
			<ability name="Glyphword 7 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<!-- unused -->
			<ability name="Glyphword 8 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<!-- Usurpation (lvl 1): When an enemy affected by Axii dies, the effect transfers to another -->
			<ability name="Glyphword 10 _Stats">
				<tags>Glyphword</tags>
				
				<glyphword_range type="add" min="15" />
			</ability>

			<!-- Ignition (lvl 1): Enemies set alight by Igni have 25% to set other enemies on fire within 2 yards -->
			<ability name="Glyphword 12 _Stats">
				<tags>Glyphword</tags>

				<!-- delay in secs between burning application test (optimalization) -->
				<glyphword12_burning_delay type="add" min="1.0" />

				<!-- range in which enemies get burned -->
				<glyphword12_range type="add" min="2.0" />
				
				<!-- duration of burning on triggered enemies -->
				<duration type="add" min="3" />
				
				<!-- burn chance -->
				<glyphword12_chance type="add" min="0.25" />
			</ability>	  

			<!-- Beguilement (lvl 2): Enemies affected by Axii are affected an extra 2s for every hit they land -->
			<ability name="Glyphword 14 _Stats">
				<tags>Glyphword</tags>

				<increas_duration type="add" min="2" />
			</ability>
			
			<!-- Entanglement (lvl 2): When a Yrden trap hits an enemy, a Yrden glyph is placed there -->
			<ability name="Glyphword 15 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<!-- Protection (lvl 2): When entering combat, you automatically get Quen without using stamina -->
			<ability name="Glyphword 17 _Stats">
				<tags>Glyphword</tags>

				<quen_apply_chance type="add" min="1.0" />
			</ability>

			<!-- Possession (lvl 3): When an opponent under Axii dies, the effect transfers onto nearest target. Duration increases by 2s for every hit the target lands -->
			<ability name="Glyphword 18 _Stats">
				<tags>Glyphword</tags>

				<increas_duration type="add" min="2" />
				<glyphword_range type="add" min="15" />
			</ability>

			<!-- Eruption (lvl 3): Enemies on fire from Igni explode upon death and set fire to others -->
			<ability name="Glyphword 20 _Stats">
				<tags>Glyphword</tags>

				<radius type="add" always_random="false" min="3" />

				<!-- scales with SP -->
				<FireDamage type="add" min="200" max="200" />
			</ability>	  
		</abilities>
	</definitions>

