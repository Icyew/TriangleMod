    <Group id="TModOptionSigns" displayName="Mods.TMod. Signs ">
		<PresetsArray>
			<Preset id="0" displayName="Default" tags="customNames;nonLocalized;customDisplayName">
				<Entry varId="QuenStaminaRegenMult"				value="0.5"	/>
				<Entry varId="QuenDamageRatio"					value="0.667"/>
			</Preset>
		</PresetsArray>
		<VisibleVars>
			<Var id="QuenStaminaRegenMult"	 		 displayName="Total stamina regen multiplier during basic Quen"				 			displayType="SLIDER;0.00;1;20"	 		tags="customNames;nonLocalized;customDisplayName" />
